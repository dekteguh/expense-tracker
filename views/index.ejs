<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
      crossorigin="anonymous">

  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h3>
            <%= title %>
          </h3>
          <div class="col-md-6">
            <form id="expense-form" action="/" method="post">
              <div class="form-group">
                <label for="amount">Amount</label>
                <input type="text" class="form-control" name="amount" id="expense-amount" />
              </div>
              <div class="form-group">
                <label for="description">Description</label>
                <textarea type="text" class="form-control" name="description" id="expense-description" cols="30" rows="10"></textarea>
              </div>
              <button class="btn btn-primary">Save</button>
            </form>
          </div>
          <div class="col-md-6">
            <table class="table table-stripped">
              <thead>
                <th>No</th>
                <th>Amount</th>
                <th>Description</th>
              </thead>
              <tbody>
                <% for(let i=0;i<expenses.length;i++) { %>
                  <tr>
                    <td><%= (i+1) %></td>
                    <td><%= expenses[i].amount %></td>
                    <td><%= expenses[i].description %></td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
